<section id="header" class="header-wrapper">
	<nav class="navbar navbar-default">
		<div class="container">
			<div class="col-xs-5 col-sm-2 col-md-2 col-lg-2">
				<div class="logo"><a href="#" class="navbar-brand"><span class="sh">Ш</span><span class="plus">++</span></a>
				</div>
			</div>
			<div class="col-xs-12 col-sm-7">
				<div class="main-menu">
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<form action="/library/search" method="post" class="navbar-form navbar-right">
							<div class="form-group">
								<input id="search" type="search" name="searchParam" placeholder="Найти книгу" class="form-control">
								<div class="loader"><img src="/images/loading.gif"></div>
								<div id="list" size="" class="bAutoComplete mSearchAutoComplete"></div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class=" ">
				<div class="social">
					<a href="/auth/logout" class="btn" style="color:#27ae60;background-color:black;display:inline">Выход</a>
					<a href="https://www.facebook.com/shpp.kr/" target="_blank">



						<span class="fa-stack fa-sm"><i class="fa fa-facebook fa-stack-1x"></i></span>
					</a><a href="http://programming.kr.ua/ru/courses#faq" target="_blank"><span class="fa-stack fa-sm"><i
								class="fa fa-book fa-stack-1x"></i></span></a>
				</div>
			</div>
		</div>
	</nav>
</section>
<section id="main" class="main-wrapper">
	<div class="container">
		<div id="content" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			{{#if search}}
			<div style="justify-content: center;">результаты поиска {{search.searchParam}}</div>
			{{/if}}
			{{#if books.length}}
			{{#each books}}
			<div data-book-id={{id}} class="book_item col-xs-6 col-sm-3 col-md-2 col-lg-2">
				<div class="book">
					<a href="/library/{{id}}"><img src={{img}} alt={{name}}>
						<div data-title={{name}} class="blockI" style="height: 46px;">
							<div data-book-title={{name}} class="title size_text">{{name}}</div>
							<div data-book-author={{authors}} class="author">{{authors}}</div>
						</div>
					</a>
					<a href="/library/{{id}}">
						<button type="button" class="details btn btn-success">Читать</button>
					</a>
				</div>
			</div>
			{{/each}}
			{{/if}}
		</div>
	</div>
	{{#if pagination.required}}
	<div id="pagination" style="display: flex;justify-content:space-around;width:15%;margin:0 auto">
		{{#unless pagination.first_page}}
		<a href="/library/?pageNumber={{decrement pagination.pageNumber}}">
			<button type="button" class="btn btn-success">назад</button>
		</a>
		{{/unless}}
		{{#unless pagination.last_page}}
		<div class="btn-group" role="group" aria-label="Basic outlined example">
			<a href="/library/?pageNumber={{increment pagination.pageNumber}}">
				<button type="button" class="btn btn-success">вперед</button>
			</a>
			{{/unless}}
		</div>
	</div>
	{{/if}}
</section>